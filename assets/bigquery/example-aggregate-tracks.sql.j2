# EXAMPLE OF THE AGGREGATED TRACKS QUERY JINJA TEMPLATE
# IT IS IMPORTANT TO ADD THE {{ start_yyyymmdd }}
# AND {{ end_yyyymmdd }} variables.

#standardSQL
WITH
  ########################################################
  # Extract the messages we are going to process
  ########################################################
  messages AS (
  SELECT
    sv.seg_id,
    sv.vessel_id,
    m.timestamp,
    ST_GEOGPOINT(m.lon, m.lat) AS position,
    IFNULL(m.nnet_score, m.logistic_score) AS score,
    m.speed,
    m.course
  FROM
    `MESSAGES_SCORED_TABLE*` AS m
  INNER JOIN
    `SEGMENT_INFO_TABLE` AS si
  USING
    (seg_id)
  INNER JOIN
    `VESSEL_INFO_TABLE` AS sv
  USING
    (seg_id)
  WHERE
    _TABLE_SUFFIX BETWEEN '{{ start_yyyymmdd }}'
    AND '{{ end_yyyymmdd }}'
    AND si.noise = false
    AND si.pos_count > 5
    AND m.lat IS NOT NULL
    AND m.lon IS NOT NULL
    AND sv.vessel_id_rank = 1)
SELECT
  seg_id,
  vessel_id,
  timestamp,
  position,
  score,
  speed,
  course
FROM
  messages
